@model oraclenhom3.Models.CHITIETTRAM

@{
    ViewBag.Title = "chonnuoc";
}

<div class="row">
    <div class="col-md-6">
        <h2><span style=" font-weight:700;">DỰ BÁO THỜI TIẾT</span> <span style="color:cadetblue">@Model.TRAM.TENTRAM</span> </h2>
        <hr />

        <h4>Hôm Nay </h4>
        <h4 id="myClock" class="text-danger"></h4>
        <hr />
    </div>
    <div class="col-md-6">

        <div class="row">
            <div class="col-md-4">
                <img src="~/images/@Model.TRAM.NUOC.HINH" class="rounded" alt="Cinque Terre" width="100px" height="75px">
            </div>
            <div class="col-md-6">
                <form action="/Home/dubao" method="post">
                    <input type="hidden" value="@Model.TRAM.MANUOC" name="manuoc" />
                    <select class="form-control" name="tentram">
                        @{
                            var lists = (List<string>)ViewData["arr"];
                            foreach (var item in lists)
                            {
                                <option value="@item">@item </option>


                            }
                        }
                    </select>
                    <div style="float:right;">
                        <button type="submit">DỰ BÁO</button>
                    </div>
                    
                </form>
            </div>
        </div>


    </div>

</div>



@section Scripts{
    <script>
        setInterval(function () {
            $.ajax({

                url: "/Home/ServerTime",

                data: "",

                type: "GET",

                success: function (data) {
                    $("#myClock").html(data);
                },
                error: function (xhr, err, data) {
                    alert("Lỗi : " + err)
                }
            });
        }, 1000);
    </script>
}

    <div>

        <table class="table" style="margin-bottom:100px; border-color:aqua;">
            <tr class="text-center">

                <th class="text-center">
                    Nhiệt Độ
                </th>
                <th class="text-center">
                    Áp Suất
                </th>
                <th class="text-center">
                    Tốc Độ Gió
                </th>
                <th class="text-center">
                    Nhiệt Độ Cao Nhất
                </th>
                <th class="text-center">
                    Nhiệt Độ Thấp Nhất
                </th>
                <th class="text-center">
                    Lượng Mưa
                </th>
                <th></th>
            </tr>


            <tr class="text-center">

                <td style="color:chocolate">
                    @Html.DisplayFor(model => model.NHIETDO)<span> &#8451</span>
                </td>
                <td style="color: coral">
                    @Html.DisplayFor(model => model.APSUAT)<span> mmPa</span>
                </td>
                <td>
                    @Html.DisplayFor(model => model.TOCDOGIO)<span> km/s</span>
                </td>
                <td style="color: crimson">
                    @Html.DisplayFor(model => model.TMAX)<span> &#8451</span>
                </td>
                <td style="color: aquamarine">
                    @Html.DisplayFor(model => model.TMIN)<span> &#8451</span>
                </td>
                <td style="color: cornflowerblue">
                    @Html.DisplayFor(model => model.LUONGMUA)<span> mm</span>
                </td>
                <td></td>
            </tr>


        </table>
        <hr />

    </div>

