@model oraclenhom3.Models.dubaoviewmodel

@{
    ViewBag.Title = "chonnuoc";
}

<div class="row">
    <div class="col-md-6">
        <h2><span style=" font-weight:700;">DỰ BÁO THỜI TIẾT</span> <span style="color:cadetblue">@Model.tenTram</span> </h2>
        <hr />

        <h4>Hôm Nay </h4>
        <h4 id="myClock" class="text-danger"></h4>
        <hr />
    </div>
    <div class="col-md-6">

        <div class="row">
            <div class="col-md-4">
                <img src="~/images/@Model.Hinh" class="rounded" alt="Cinque Terre" width="100px" height="75px">
            </div>
            <div class="col-md-6">
                <form action="/Home/dubao" method="post">
                    <input type="hidden" value="@Model.Manuoc" name="manuoc" />
                    <select class="form-control" name="tentram">
                        @{
                            var lists = (List<string>)ViewData["arr"];
                            foreach (var item in lists)
                            {
                                <option value="@item">@item </option>


                            }
                        }
                    </select>
                    <div style="float:right;margin-top:20px;">
                        <button type="submit">DỰ BÁO</button>
                    </div>

                </form>
            </div>
        </div>


    </div>

</div>



@section Scripts{
    <script>
        setInterval(function () {
            $.ajax({

                url: "/Home/ServerTime",

                data: "",

                type: "GET",

                success: function (data) {
                    $("#myClock").html(data);
                },
                error: function (xhr, err, data) {
                    alert("Lỗi : " + err)
                }
            });
        }, 1000);
    </script>
}


<div>

    <table class="table" style="margin-bottom:100px; border-color:aqua;">
        <tr class="text-center">

            <th class="text-center">
                Nhiệt Độ
            </th>
            <th class="text-center">
                Áp Suất
            </th>
            <th class="text-center">
                Tốc Độ Gió
            </th>
            <th class="text-center">
                Nhiệt Độ Cao Nhất
            </th>
            <th class="text-center">
                Nhiệt Độ Thấp Nhất
            </th>
            <th class="text-center">
                Lượng Mưa
            </th>
            <th></th>
        </tr>


        <tr class="text-center">

            <td style="color:chocolate">
                @Html.DisplayFor(model => model.nhietdo)<span> &#8451</span>
            </td>
            <td style="color: coral">
                @Html.DisplayFor(model => model.apsuat)<span> mmPa</span>
            </td>
            <td>
                @Html.DisplayFor(model => model.tocdogio)<span> km/s</span>
            </td>
            <td style="color: crimson">
                @Html.DisplayFor(model => model.tmax)<span> &#8451</span>
            </td>
            <td style="color: aquamarine">
                @Html.DisplayFor(model => model.tmin)<span> &#8451</span>
            </td>
            <td style="color: cornflowerblue">
                @Html.DisplayFor(model => model.luongmua)<span> mm</span>
            </td>
            <td></td>
        </tr>


    </table>
    <hr />

</div>
